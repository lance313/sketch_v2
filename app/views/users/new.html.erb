<div id="signup"
  <h1>Sign up</h1>
  <%= form_for @user do |f| %>
  <p>
  <%= f.label :name %>
  <%= f.text_field :name %>
  </p>
  <p>
  <%= f.label :email %>
  <%= f.text_field :email %>
  </p>
  <p>
  <%= f.label :password %>
  <%= f.password_field :password %>
  </p>
  <p>
  <%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation %>
  </p>
  <p>
  <%= f.submit %>
  </p>
  <% end %>
</div>
<style>
  #signup {
    background-image: url('http://i.imgur.com/mnMW0PL.jpg');
    height: 85vh;
    background-size:cover;
    text-align: center;
    color: #4a1cdf;
  }
</style>
